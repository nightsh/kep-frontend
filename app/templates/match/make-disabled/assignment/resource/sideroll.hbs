{{#each model as |resource|}}
  {{#link-to "match.assignment.show.resource.show" resource}}
    <li class="post text-center">
      <span class="post_title">
        {{tool-tip tagName="i"
          heading="Description"
          class="fa fa-info-circle description-trigger"
          tip=resource.description_fragment}}
        {{resource.title}}
      </span>
      <span class="left_icons">
        {{#each resource.resource_types as |type|}}
          {{fa-icon type.icon}}
        {{/each}}
       </span>
      <span class="right_icons">
        {{#each resource.resource_reward as |reward|}}
          {{fa-icon reward.icon}}
        {{/each}}
       </span>
    </li>
  {{/link-to}}
{{/each}}
