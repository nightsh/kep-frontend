{{#each model as |assignment|}}
  {{#link-to "match.assignment.show" assignment}}
    <li class="post text-center">
      <span class="post_title">
        {{tool-tip tagName="i"
          heading="Description"
          class="fa fa-info-circle description-trigger"
          tip=assignment.description_fragment}}
        {{assignment.title}}
      </span>
      <span class="left_icons">
        {{#each assignment.assignment_types as |type|}}
          {{fa-icon type.icon}}
        {{/each}}
       </span>
      <span class="right_icons">
        {{#each assignment.assignment_rewards as |reward|}}
          {{fa-icon reward.icon}}
        {{/each}}
       </span>
    </li>
  {{/link-to}}
{{/each}}
